<h2>店舗情報</h2>
<div class="facility_show_3rd">
  <div class="facility">
    <ul>
      <li>施設名</li>
      <li>　<%= @facility.name %></li>
      <li>住所</li>
      <li>　<%= @facility.prefecture + @facility.address %></li>
      <li>ホームページ</li>
      <li>　<%= @facility.homepage %></li>
      <li>営業時間</li>
      <li>　<%= @facility.business_hours %></li>
      <li>定休日</li>
      <li>　<%= @facility.holiday %></li>
      <li>利用料金</li>
      <li>　<%= @facility.fee %></li>
      <li>支払い方法</li>
      <li>　<%= @facility.payment %></li>
      <li>更新日</li>
      <li>　<%= @facility.updated_at.strftime('%Y/%m/%d') %></li>
    </ul>
  </div>
  <div id="map" style='width: 560px; height: 400px;'></div>
  <script>
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers([
      {
        "lat": <%= @facility.latitude %>,
        "lng": <%= @facility.longitude %>,
      }
      ]);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      handler.getMap().setZoom(15);
    });
  </script>
</div>

<h2>ユーザーのコメント</h2>
<% @reviews.each do |review| %>
  <div class="facility_show_4th">
    <div class="name">
      <%= review.user.name %>
    </div>
    <div class="review">
        湿度:★<%= review.dry %>　
        明るさ:★<%= review.light %>　
        広さ:★<%= review.wide %>　
    </div>
    <div class="created_at">
      投稿日
      <%= review.created_at.strftime('%Y/%m/%d') %>
    </div>
    <div class="comment">
      <%= review.comment %>
    </div>
  </div>
<% end %>

