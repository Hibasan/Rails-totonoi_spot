    <li><%= facility.chairs.find_by(sex_id: 2,rest_area_id: 1)&.bench_non_backrest && "ベンチ(背もたれなし)#{facility.chairs.find_by(sex_id: 2,rest_area_id: 1)&.bench_non_backrest}"%></li>
  </ul>
  <ul class="facility_index_view">
    <li>室外：</li>
    <li><%= facility.chairs.find_by(sex_id: 2,rest_area_id: 2)&.bath && "風呂イス#{facility.chairs.find_by(sex_id: 2,rest_area_id: 2)&.bath}"%></li>
