    <li><%= facility.chairs.find_by(sex_id: 2,rest_area_id: 2)&.bench_non_backrest && "ベンチ(背もたれなし)#{facility.chairs.find_by(sex_id: 2,rest_area_id: 2)&.bench_non_backrest}"%></li>
  </ul>
  <ul class="facility_index_view">
    <li>サウナ：</li>
    <% facility.saunas.where(sex: "女性").each do |sauna| %>
    <li><%= "#{sauna&.temperature}℃" %></li>
    <% end %>
  </ul>
  <ul class="facility_index_view">
    <li>水風呂：</li>
    <% facility.water_baths.where(sex: "女性").each do |water| %>
    <li><%= "#{water&.temperature}℃" %></li>
    <% end %>
  </ul>
  </div>
</div>
<% end %>
