<h2>facilities#index.html</h2>
<br>
<% @facilities.each do |facility| %>
<div class="facility_index">
  <%= link_to facility_path(facility.id) do %>
  <div class="facility_index_top">
  <h2><%= facility.name %></h2>
  <%= facility.prefecture + facility.address %>
  </div>
  <div class="facility_index_left">
    <span>写真<span>
  </div>
  <% end %>
  <div class="facility_index_right">
    <h4>男性</h4>
  <ul class="facility_index_view">
    <li>室内：</li>
    <li><%= facility.chairs.find_by(sex_id: 1,rest_area_id: 1)&.bath && "風呂イス#{facility.chairs.find_by(sex_id: 1,rest_area_id: 1)&.bath}"%></li>
    <li><%= facility.chairs.find_by(sex_id: 1,rest_area_id: 1)&.deck && "デッキチェア#{facility.chairs.find_by(sex_id: 1,rest_area_id: 1)&.deck}"%></li>
    <li><%= facility.chairs.find_by(sex_id: 1,rest_area_id: 1)&.relax && "リクライニング#{facility.chairs.find_by(sex_id: 1,rest_area_id: 1)&.relax}"%></li>
    <li><%= facility.chairs.find_by(sex_id: 1,rest_area_id: 1)&.bench && "ベンチ#{facility.chairs.find_by(sex_id: 1,rest_area_id: 1)&.bench}"%></li>
    <li><%= facility.chairs.find_by(sex_id: 1,rest_area_id: 1)&.bench_non_backrest && "ベンチ(背もたれなし)#{facility.chairs.find_by(sex_id: 1,rest_area_id: 1)&.bench_non_backrest}"%></li>
  </ul>
  <ul class="facility_index_view">
    <li>室外：</li>
    <li><%= facility.chairs.find_by(sex_id: 1,rest_area_id: 2)&.bath && "風呂イス#{facility.chairs.find_by(sex_id: 1,rest_area_id: 2)&.bath}"%></li>
    <li><%= facility.chairs.find_by(sex_id: 1,rest_area_id: 2)&.deck && "デッキチェア#{facility.chairs.find_by(sex_id: 1,rest_area_id: 2)&.deck}"%></li>
    <li><%= facility.chairs.find_by(sex_id: 1,rest_area_id: 2)&.relax && "リクライニング#{facility.chairs.find_by(sex_id: 1,rest_area_id: 2)&.relax}"%></li>
    <li><%= facility.chairs.find_by(sex_id: 1,rest_area_id: 2)&.bench && "ベンチ#{facility.chairs.find_by(sex_id: 1,rest_area_id: 2)&.bench}"%></li>
    <li><%= facility.chairs.find_by(sex_id: 1,rest_area_id: 2)&.bench_non_backrest && "ベンチ(背もたれなし)#{facility.chairs.find_by(sex_id: 1,rest_area_id: 2)&.bench_non_backrest}"%></li>
  </ul>
  <ul class="facility_index_view">
    <li>サウナ：</li>
    <% facility.saunas.where(sex: "男性").each do |sauna| %>
    <li><%= "#{sauna&.temperature}℃" %></li>
    <% end %>
  </ul>
  <ul class="facility_index_view">
    <li>水風呂：</li>
    <% facility.water_baths.where(sex: "男性").each do |water| %>
    <li><%= "#{water&.temperature}℃" %></li>
    <% end %>
  </ul>
  <h4>女性</h4>
  <ul class="facility_index_view">
    <li>室内：</li>
    <li><%= facility.chairs.find_by(sex_id: 2,rest_area_id: 1)&.bath && "風呂イス#{facility.chairs.find_by(sex_id: 2,rest_area_id: 1)&.bath}"%></li>
