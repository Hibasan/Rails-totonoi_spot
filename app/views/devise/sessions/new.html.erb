<div class="session_container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="session_content">

      <div class="session_email">
        <%= f.label :email %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="session_password">
        <div class="a-row">
          <div class="session_left">
            <%= f.label :password, "パスワード" %>
          </div>
          <div class="session_right">
            <%= link_to "パスワードを忘れた場合", new_user_password_path %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="session_login">
        <%= f.submit "ログイン" %>
        <% if devise_mapping.rememberable? %>
      </div>
      <div class="session_remember">
        <%= f.check_box :remember_me %>
        <%= f.label :remember, "ログインしたままにする" %>
      </div>
        <% end %>
    <% end %>

    <div class="session_sign_up">
      <%= link_to "アカウントを作成", new_user_registration_path %>
    </div>
    </div>
</div>
