<div class="devise_container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="devise_content">
    <h4>ログイン</h4>
    <div class="devise_email">
      <%= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="devise_password">
      <div class="a-row">
        <%= f.label :password, "パスワード" %>
      </div>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    <div class="devise_button">
      <%= f.submit t('.sign_in') %>
    </div>
    <% if devise_mapping.rememberable? %>
    <div class="devise_remember">
      <%= f.check_box :remember_me %>
      <%= f.label :remember, "ログインしたままにする" %>
    </div>
    <% end %>
    <% end %>
    <hr>
    <div class="devise_link">
      <%= link_to "アカウント登録", new_user_registration_path %>
      <br>
      <%= link_to "パスワードを忘れた場合", new_user_password_path %>
    </div>
  </div>
</div>
<%= render "devise/shared/error_messages", resource: resource %>
