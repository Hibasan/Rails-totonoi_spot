<div class="session_container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="session_content">
      <div class="session_email">
        <%= f.label :email %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="session_password">
        <div class="a-row">

            <%= f.label :password, "パスワード" %>


        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="session_login">
        <%= f.submit "ログイン" %>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="session_remember">
        <%= f.check_box :remember_me %>
        <%= f.label :remember, "ログインしたままにする" %>
      </div>
      <% end %>
    <% end %>
<hr>
    <div class="session_sign_up">
      <%= link_to "アカウント登録", new_user_registration_path %>
      <br>
      <%= link_to "パスワードを忘れた場合", new_user_password_path %>
    </div>
  </div>
</div>
<%= render "devise/shared/error_messages", resource: resource %>
